    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'advent_of_code_202x'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=advent_of_code_202x",
                    "--package=advent_of_code_202x"
                ],
                "filter": {
                    "name": "advent_of_code_202x",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'advent_of_code_202x'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent_of_code_202x",
                    "--package=advent_of_code_202x"
                ],
                "filter": {
                    "name": "advent_of_code_202x",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}